{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "organizeImports": { "enabled": true },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80,
    "formatWithErrors": false
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "jsxQuoteStyle": "double"
    }
  },
  "files": {
    "ignore": [
      "routeTree.gen.ts",
      "tsconfig.json",
      "tsconfig.app.json",
      "tsconfig.node.json"
    ]
  },
  "linter": {
    "enabled": true,
    "rules": { "recommended": true },
    "ignore": ["dist", "src/components/ui/"]
  }
}
